---
import Icon from '../Icon.astro';
import MenuLink from './MenuLink.astro';
export interface Props {
  
}

const { 
   
} = Astro.props;

---
<section class="menu nav-listener">
    <div class="links">
        <MenuLink href="/" label="Home" />
        <MenuLink href="/about" label="About" />
        <MenuLink href="/work" label="Work" />
        <MenuLink href="/writing" label="Writing" />
        <MenuLink href="/resume" label="CV" />
    </div>
    <div class="mobile-menu">
        <Icon name="menu" size='small' />
    </div>
</section>

<style lang="scss">
    .menu {
        min-width: 335px;
        height: 32px;
        display: flex;
        transition: all 0.5s ease-in-out;
        .links {
            display: flex;
            gap: 1.5rem;
            height: 32px;
            overflow: hidden;
        }
        .mobile-menu {
            display: none;
        }
    }
    @media screen and (max-width: 50rem) {
        .menu {
            min-width: 100px;
            .links {
                display: none;
            }
            .mobile-menu {
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
            }
        }
    }
</style>

