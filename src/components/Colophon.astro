---
export interface Props {}

const {} = Astro.props;

---

<article id="colophon">
  <section class="content">
    <div>
      <span>This site was built for you</span>
      <div class="row">
        <p>Framework</p>
        <p>AstroJS</p>
      </div>
      <div class="row">
        <p>Deploys</p>
        <p>Netlify</p>
      </div>
      <div class="row">
        <p>Typeface</p>
        <p>Archia from Attipo</p>
      </div>
    </div>
    <iframe src="https://giphy.com/embed/S8ZJ0c7a1lXvkkCjr9"></iframe>
    <a class="close" href="#nav">Close</a>
  </section>
</article>

<style lang="scss">
  /* This handles the overlay or dim layer */
  article {
    pointer-events: none;
    opacity: 0;
    position: absolute;
    display: flex;
    align-items: flex-start;
    padding: var(--spacing-medium) 0;
    justify-content: center;
    inset: 0;
    overflow: hidden;
    background: var(--theme-menu);
    backdrop-filter: blur(1rem);
    transition: opacity linear 0.2s;
    z-index: 2;
    height: 100%;
    top: 0;
  }

  /* When targetted with #modalID */
  article:target {
    pointer-events: inherit;
    opacity: 1;
  }

  /* When the details is clicked, the animation is triggered on summary */
  article:target section {
    animation: appear 0.5s var(--timing-curve-bounce);
  }

  /* This handles the actual centered modal */
  .content {
    position: relative;
    width: 90%;
    max-width: 20rem;
    padding: var(--spacing-small);
    color: var(--theme-ink);
    background-color: var(--theme-menu);
    border-radius: 1rem;
    border: 1px solid var(--theme-ink);

    iframe {
      flex: 1;
      border: none;
      width: 100%;
      margin: 2rem auto 0;
    }

    span {
      display: flex;
      padding-bottom: 8px;
      margin-bottom: 8px;
      border-bottom: 1px solid var(--theme-ink);
      font-size: 12px;
      letter-spacing: 1px;
      text-transform: uppercase;
      font-weight: 600;
    }

    .row {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      flex-wrap: wrap;
      margin-bottom: .5rem;
      &:first-of-type {
        margin-top: 2rem;
      }
      p {
        margin: .1rem 0;
      }
      p:first-child {
        font-weight: 600;
      }
    }

    a.close {
      display: block;
      font-size: 14px;
      margin-top: 1rem;
    }
  }

  /* Magic */
  @keyframes appear {
    from {
      transform: scale(0.9);
      opacity: 0;
    }

    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>
