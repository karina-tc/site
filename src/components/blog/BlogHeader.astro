---
export interface Props {
    title: string;
    detail: string;
}

const { title, detail } = Astro.props;
---

<div class="blog-header">
    <h1>{title}</h1>
    <p>{detail}</p>
</div>

<style lang="scss">
   .blog-header {
        width: calc(100% - 12vw);
        max-width: 58rem;
        margin-left: auto;
        margin-right: auto;

        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: var(--spacing-small) 0;

        p {
            opacity: .7;
            font-weight: 600;
        }
    }
</style>
