---
export interface Props {
 	headline: string;
    image?: string;
}

const { headline, image } = Astro.props;
---

<section class="ribbon">
    {image && (
        <div class="image">
            <img class="animate__animated animate__slideInUp" slot="image" src={image} draggable="false" />
        </div>
    )}
    <div class="content">
        <h1>{headline}</h1>
        <slot></slot>
    </div>
</section>

<style lang="scss">
    .ribbon {
        display: flex;
        align-items: flex-start;
        gap: 3rem;
        flex-wrap: wrap;

        .image {
            padding: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 2rem 0 2rem 0;
            background: var(--greenPaper);
            overflow: hidden;

            img {
                max-width: 200px;
            }
        }

        .content {
            flex: 1;
            font-size: 1.25rem;
        }
    }
</style>