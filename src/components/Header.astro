---
import '../styles/global.css';
import Icon from './Icon.astro';
import Menu from './menu/Menu.astro';
---

<div id="nav" class="header">
    <div class="wrapper">
        <div class="left">
            <a class="mark" href="/"></a>
            <Menu />
        </div>
        <div class="right tod">
            <span class="sunrise">
                <Icon name='sunrise' size='small' />
            </span>
            <span class="sunset">
                <Icon name='sunset' size='small' />
            </span>
            <span class="evening">
                <Icon name='evening' size='small' />
            </span>
            <p id="greeting"></p>
        </div>
    </div>
</div>

<style lang="scss">
    .header {
        width: 100%;
        min-height: 56px;
        top: 0rem;
        z-index: 2;
        position: relative;
        background-color: var(--main-color);
        padding: var(--spacing-medium) 0 var(--spacing-small) ;

        &.onthemove {
            padding: var(--spacing-xsmall) 0;
            position: sticky;
            background-color: var(--theme-nav-move);
            backdrop-filter: blur(10px);
            height: auto;
            transition: background-color 0.1s ease-in-out;
            will-change: transform;
            animation: smooth 0.5s ease-in-out;
        }
        
        .wrapper {
            width: 100%;
            height: 40px;
            margin: auto;
            max-width: 70rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: var(--spacing-xsmall) 0 var(--spacing-xsmall);

            transition: all 0.5s ease-in-out;
            will-change: transform;
            animation: smooth 0.5s ease-in-out;
        }

        .left {
            flex: 1;
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .right {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            align-items: center;
            height: 40px;
            position: relative;

            span {
                width: 24px;
                height: 24px;
            }

            &.sunrise span.sunset, &.sunrise .evening {display: none;}
            &.sunset span.sunrise, &.sunset .evening {display: none;}
            &.evening span.sunrise, &.evening .sunset {display: none;}
        }

        .mark {
            content: '';
            width: 40px;
            height: 40px;
            min-width: 40px;
            min-height: 40px;
            background-image: var(--theme-mark);
            background-repeat: no-repeat;
            background-size: cover;
        }

        &.invert {
            background-color: var(--theme-nav-invert);
            .mark {
                background-image: url('/public/images/mark-white.svg');
            }

            .right {
                color: var(--white);
            }
        }
    }

    @media only screen and (max-width: 70rem) {
        .header .wrapper {
            width: 88%;
        }
    }
    
</style>