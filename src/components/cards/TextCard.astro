---
export interface Props {
    type?: string;
    title: string;
    copy: string;
    author?: string;
}

const { type = "simple", title = "title" , copy = "Lorem ipsum", author} = Astro.props;
---


{type === 'simple' && (
    <div class="card-cell simple">
        <h3>{title}</h3>
        <p>{copy}</p>
    </div>
)}
{type === 'quote' && (
    <div class="card-cell quote">
        <div class="quote-image">
            <img src="/images/quote-avc.png" alt={author} draggable="false" />
        </div>
        <div class="quote-text">
            <slot name="quote"></slot>
            <div class="quote-details">
                <p>{author}</p>
                <p>{title}</p>
                <span>{copy}</span>
            </div>
        </div>
    </div>
)}


<style lang="scss">
    .card-cell {
        display: flex;
        align-items: left;
        justify-content: left;
        background-color: var(--brand50);
        border-radius: var(--border-radius);
        width: 100%;
        height: 100%;
        overflow: hidden;

        &.simple {
            flex-direction: column;
            height: 100%;
            padding: var(--spacing-small);
        }

        &.quote {
            flex-direction: row;
            align-items: flex-start;
            justify-content: left;
            font-size: 1rem;
            flex-wrap: wrap;

            .quote-image {
                content: '';
                min-width: 270px;
                min-height: 270px;
                flex: 1;
                display: flex;
                align-items: flex-end;
                justify-content: center;
                background-color: var(--brand100);

                img {max-width: 250px;}
            }

            .quote-text {
                flex: 2;
                min-width: 400px;
                padding: .25rem var(--spacing-small) var(--spacing-small) var(--spacing-small);
            }

            .quote-details {
                display: flex;
                flex-direction: column;

                p {
                    margin: 0;
                    &:first-of-type {
                        font-weight: bold;}
                }
                span {
                    font-size: .8rem;
                    line-height: 200%;
                }
            }

        }
        h3, p {
            margin-bottom: 0;
        }
    }
</style>