---
export interface Props {
    title: string;
    copy: string;
}

const { title = "title" , copy = "Lorem ipsum"} = Astro.props;
---

<div class="card-cell">
    <h3>{title}</h3>
    <p>{copy}</p>
</div>

<style lang="scss">
    .card-cell {
        display: flex;
        flex-direction: column;
        align-items: left;
        justify-content: left;
        padding: var(--spacing-small);
        background-color: var(--brand50);
        border-radius: var(--border-radius);
        width: 100%;
        height: 100%;

        h3, p {
            margin-bottom: 0;
        }
    }
</style>