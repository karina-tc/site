---
export interface Props {
    width?: string;
    image1: string;
    image2?: string;
    title: string;
    details: string;
    link?: string;
    target?: string;
    showComingSoon?: string;
}

const { width, image1, image2, title, details, showComingSoon, link, target } = Astro.props;
---

<a class:list={`artcard ${width}-width`} href={link} target={target}>
    <div class="thumb">
        {image1 && <img class="lazy start" data-src={image1} draggable="false" />}
        {image2 && <img class="lazy end" data-src={image2} draggable="false" />}
    </div>
    <div class="details">
        <p>{title}</p>
        <span>{details}</span>
        {showComingSoon && <strong>Details coming soon</strong>}
    </div>
</a>

<style lang="scss">
    .artcard {
        width: 100%;
        display: flex;
        flex-direction: column;
        border-radius: 1rem;
        border: 2px solid var(--brand50);
        background-color: var(--brand50);
        text-decoration: none;
        overflow: hidden;

        &.full-width {
            grid-column: span 2;
            .thumb {
                max-height: 330px;
            }
        }
        .thumb {
            width: 100%;
            max-height: 220px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 1rem 1rem 0 0;
            mix-blend-mode: luminosity;
            transition: all .3s ease-in-out;
            position: relative;
            img {
                width: 100%;
                height: auto;
                object-fit: cover;
                transition: all .1s ease-in-out;

                &.end {
                    position: absolute;
                    opacity: 0;
                }
            }
        }

        @media(hover: hover) and (pointer: fine) {
            &:hover {
                background-color: var(--brand100);
                border-color: var(--brand100);
                .thumb {
                    mix-blend-mode: normal;
                    img {
                        &.end {
                            opacity: 1;
                            transition: all .3s ease-in-out;
                        }
                    }
                }
            }
        }
        .details {
            padding: var(--spacing-small);
        }
        p {
            margin: 0;
            font-weight: 600;
            font-family: var(--font-headlines);
        }
        span {
            font-size: .9rem;
            color: var(--brandDark);
            opacity: 0.8;
        }
        strong {
            display: block;
            font-size: .9rem;
            line-height: 200%;
            opacity: .75;
        }
    }
</style>