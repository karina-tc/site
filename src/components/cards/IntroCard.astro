---
export interface Props {
    type?: string;
    theme?: string;
    headline?: string;
    image?: string;
    imageAlt?: string;
    icon?: string;
    href?: string;
}

const { type, theme, headline, image, imageAlt, icon, href } = Astro.props;

import Icon from "../../components/Icon.astro";
---

{type === 'link' && (
    <a class={`intro-card link ${theme}`} href={href}>
        <div class="text">
            <h2>{headline}</h2>
            <p><slot /></p>
        </div>
        {image && (
            <div class="image">
                <img src={image} alt={imageAlt} />
            </div>
        )}
        {icon && (
            <div class="icon">
                <Icon name='arrow_right' size="small" />
            </div>
        )}
    </a>
)}
{type != 'link' && (
    <div class={`intro-card ${theme}`}>
        <div class="text">
            <h2>{headline}</h2>
            <p><slot /></p>
        </div>
        {image && (
            <div class="image">
                <img src={image} alt={imageAlt} />
            </div>
        )}
        {icon && (
            <div class="icon">
                <Icon name='arrow_right' size="small" />
            </div>
        )}
    </div>
)}

<style lang="scss">
	.intro-card {
		width: 100%;
		display: flex;
		border-radius: 1rem;
		flex-direction: row;
		text-decoration: none;
		background-color: var(--brand50);
		overflow: hidden;
		position: relative;
		transition: all .2s ease-in-out;

		&.primary {
			background-color: var(--brand100);
			.text {
				padding: var(--spacing-medium) var(--spacing-small);
			}
		}
		.text {
			flex: 1;
			padding: var(--spacing-small);
			h2 {
				font-weight: 400;
			}
			p {
				margin: .5rem 0 0;
			}
			a {
				text-decoration: underline;
			}
		}
		.image {
			flex: 0 0 50%;
			color: var(--white);

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: all .2s ease-in-out;
            }
		}

		.icon {
			position: absolute;
			height: 100%;
			width: 24px;
			right: var(--spacing-small);
			display: flex;
			align-items: center;
			justify-content: center;
			opacity: 0;
			transition: all .2s ease-in-out;
		}

		&:hover {
			background-color: var(--brand300);

			&.link {
				margin: -8px 0 8px;
			}

			.icon {
				opacity: 1;
			}

            .image img {
                transform: scale(1.1);
                transition: all .4s ease-in-out;
            }
		}
	}
</style>