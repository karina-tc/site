---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Content from "../../view/Content.astro";
import Icon from "../../components/Icon.astro";
import CardsGrid from "../../view/ CardsGrid.astro";
import TextCard from "../../components/cards/TextCard.astro";
---

<BaseLayout
    pageTitle="About me"
    footerMessage="work"
    footerTarget="/"
    showBanner="yes"
    footerMemoji="thumbsup"
>
    <div class="spacer"></div>
    <Content space="small">
        <h1 class="billboard">Artist <span>turned product</span> designer</h1>
        <p class="billboard">In my previous life, I dedicated myself to crafting artwork that transformed the unexpected into beautiful life happenings.</p>
    </Content>
    <Content space="xsmall">
        <div class="parent-container">
            <div class="columns">
                <div class="cell">
                    <div class="card fill">
                        <img src="/images/grind-1.png" alt="Grind" />
                    </div>
                    <a class="card-cta" href="">Watch this performance</a>
                </div>
                <div class="cell">
                    <div class="card">
                        <img src="/images/grind-2.png" alt="Grind" />
                    </div>
                </div>
            </div>
        </div>
    </Content>
    <Content>
        <p class="billboard">My hope was to help improve people’s life. So my transition into UX was only natural. My goal is to put a smile in people’s face with what I do.</p>
    </Content>
    <Content space="large">
        <h2>Work style</h2>
        <CardsGrid columns="two">
            <TextCard
                title="Work from home"
                copy="T-shirt, jeans, socks and no shoes for me" 
            />
            <TextCard
                title="In the morning"
                copy="Focus is a sip of coffee away" 
            />
            <TextCard
                title="With a team"
                copy="The more brainpower the better" 
            />
            <TextCard
                title="Open door"
                copy="Thinking and building in the open" 
            />
        </CardsGrid>
    </Content>
    <Content space="large">
        <h2>Values</h2>
        <div class="values">
            <div class="cell">Ownership</div>
            <div class="cell">Humor</div>
            <div class="cell">Curiosity</div>
            <div class="cell">Honesty</div>
            <div class="cell">Creativity</div>
            <div class="cell">Calmness</div>
        </div>
    </Content>
    <Content space="large">
        <h2>Interests</h2>
        <CardsGrid columns="three">
            <TextCard
                title="🌮 🍟 🍜"
                copy="Food is my love language" 
            />
            <TextCard
                title="🐶 📽 ⚽️"
                copy="Indoor cat, outdoor dog" 
            />
            <TextCard
                title="✍️ 📒 🔨"
                copy="Constant learner" 
            />
        </CardsGrid>
    </Content>
    <Content space="large">
        <h2>FAQs</h2>
        <CardsGrid columns="two">
            <TextCard
                title="I am from Mexico City"
                copy="But I’ve been a New Englander for a while" 
            />
            <TextCard
                title="I like art films"
                copy="Under the Skin, anyone?" 
            />
            <TextCard
                title="Language fascinates me"
                copy="Metaphors make me brain giddy" 
            />
            <TextCard
                title="I am from Mexico City"
                copy="I’ve a daughter, a dog, and too many hats" 
            />
        </CardsGrid>
    </Content>
</BaseLayout>

<style lang="scss">
    .parent-container {
        height: 100%;
        .columns {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            align-items: flex-start;
            gap: var(--spacing-small);
            height: 100%;
        }

        .cell {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: var(--spacing-small);
        }

        .card {
            flex: 1;
            width: 100%;
            height: 100%;
            background-color: var(--black);
            border-radius: var(--border-radius);
            overflow: hidden;

            &.fill {
                padding-bottom: 2.2rem;
            }
        }

        .card-cta {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: var(--spacing-small);
            color: var(--brandLight);
            background-color: var(--black);
            border-radius: var(--border-radius);
            font-family: var(--font-headlines);
            text-decoration: none;
        }
    }

    .values {
        display: flex;
        padding: var(--spacing-small) 0 0;
        gap: var(--spacing-xsmall);

        .cell {
            background-color: var(--brand100);
            text-align: center;
            padding: .5rem 1rem;
            border-radius: .25rem;
        }
    }

</style>
