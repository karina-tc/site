<style lang="scss">
    .info-grid {
        display: grid;
        grid-gap: var(--spacing-small);
        grid-template-columns: 1fr 1fr;
        margin-top: var(--spacing-small);

        .info-cell {
            display: flex;
            flex-direction: column;
            gap: .5rem;
            .label {
                font-size: 14px;
                margin: 0;
            }
            .detail {
                margin: 0;
            }
            .footer {
                font-size: 12px;
                margin: 0;
            }
        }
    }
    .parent-container {
        height: 100%;
        .columns {
            display: grid;
            grid-gap: var(--spacing-small);
            justify-items: center;
            align-items: start;
            margin-top: var(--spacing-small);
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            &.has-arrow {
                position: relative;
            }
        }

        .cell {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: var(--spacing-small);
        }

        .card {
            flex: 1;
            width: 100%;
            height: 100%;
            background-color: var(--black);
            border-radius: var(--border-radius);
            overflow: hidden;

            &.fill {
                padding-bottom: 1.8rem;
            }
        }

        .arrow {
            content: '';
            width: 160px;
            height: 85px;
            position: absolute;
            background-image: url('/images/arrow-cta-art.svg');
            background-repeat: no-repeat;
            background-position: top left;
            background-size: contain;
            bottom: 35px;
            margin-left: 60px;
            z-index: 1;
            display: none;
            @media only screen and (min-width: 38rem) {
                display: block;
            }
        }

        .card-cta {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: var(--spacing-small);
            color: var(--brandLight);
            background-color: var(--black);
            border-radius: var(--border-radius);
            font-family: var(--font-headlines);
            text-decoration: none;

            span {
                border-bottom: 2px solid var(--brandLight);
                transition: all .3s ease-in-out;
            }

            &:hover span {border-color: var(--brand300);}
        }
    }

    .values {
        display: flex;
        padding: var(--spacing-small) 0 0;
        gap: var(--spacing-xsmall);
        flex-wrap: wrap;

        .cell {
            background-color: var(--brand100);
            text-align: center;
            padding: .5rem 1rem;
            border-radius: .25rem;
        }
    }

    p.billboard.flush-left {
        text-align: left;
        margin: 2rem 0 3rem;
    }

    .inst-gallery {
        width: 100%;
        height: 100%;
        overflow: hidden;
        border-radius: var(--border-radius);
        position: relative;
        cursor: pointer;
        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: all .3s ease-in-out;
        }
        .caption {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            padding: var(--spacing-xsmall);
            font-size: 16px;
            color: var(--brandDark);
            text-align: center;
            position: absolute;
            z-index: 1;
            opacity: 0;
            bottom: 0;
            background-color: rgba(255, 255, 255, .75);
            backdrop-filter: blur(10px);
            transition: all .3s ease-in-out;
        }
        &:hover {
            img {
                transform: scale(1.1);
            }
            .caption {
                opacity: 1;
                bottom: 0;
            }
        }
    }
</style>