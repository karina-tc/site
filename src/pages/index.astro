---
import BaseLayout from '../layouts/BaseLayout.astro';
import CardsGrid from '../view/ContentGrid.astro';
import Content from "../view/Content.astro";
import IntroCard from '../components/cards/IntroCard.astro';

---

<BaseLayout pageTitle='Home' background='background' showBanner='yes'>
	<div slot="topper">
		<p class="billboard">Hello, new friend</p>
        <h1 class="billboard">I am a product <span class="des-cur">designer</span>, <span>artist</span> and code <span>tinkerer</span>.</h1>
		<p class="billboard">Based in New England (USA). Currently working at Glue.co</p>
	</div>
</BaseLayout>

<style lang="scss">

	h1 span {
		transition: all .2s ease-in-out;
		text-decoration: underline;
		text-decoration-style: wavy;
		text-decoration-thickness: from-font;
		text-decoration-color: #e1a66fab;
	}
	h2.ps {
		font-family: var(--font--copy);
		font-weight: 400;
		line-height: 180%;
		margin-top: 1rem;
	}
	.ribbon-links {
		padding-top: 1rem;
		display: flex;
		gap: 1rem;
	}

	.intro-card {
		width: 100%;
		display: flex;
		border-radius: 1rem;
		flex-direction: row;
		text-decoration: none;
		background-color: var(--brand50);
		overflow: hidden;
		position: relative;
		transition: all .2s ease-in-out;

		&.primary {
			background-color: var(--brand100);
			.text {
				padding: var(--spacing-medium) var(--spacing-small);
			}
		}
		.text {
			flex: 1;
			padding: var(--spacing-small);
			h2 {
				font-weight: 400;
			}
			p {
				margin: .5rem 0 0;
			}
			a {
				text-decoration: underline;
			}
		}
		.image {
			flex: 0 0 50%;
			color: var(--white);
			background-color: var(--brandDark);
		}

		.icon {
			position: absolute;
			height: 100%;
			width: 24px;
			right: var(--spacing-small);
			display: flex;
			align-items: center;
			justify-content: center;
			opacity: 0;
			transition: all .2s ease-in-out;
		}

		&:hover {
			background-color: var(--brand300);
			&.link {
				margin: -8px 0 8px;
			}

			.icon {
				opacity: 1;
			}
		}
	}

</style>

